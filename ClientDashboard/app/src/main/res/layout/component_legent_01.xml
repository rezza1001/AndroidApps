<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBlue_03"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lnly_body_01"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_65dp"
        android:background="@color/colorBlue_03"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_60dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imvw_icon_01"
                android:layout_width="@dimen/size_40dp"
                android:layout_height="@dimen/size_55dp"
                android:padding="@dimen/size_5dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_white_ticket" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/size_2dp"
                android:layout_marginLeft="@dimen/size_10dp"
                android:layout_marginTop="@dimen/size_2dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txvw_title_01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Ticket Sold"
                    android:textColor="@color/colorWhite_02"
                    android:textSize="@dimen/size_14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txvw_title_02"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="14,023"
                    android:textColor="@color/colorWhite_02"
                    android:textSize="@dimen/size_18sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnly_underline_00"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1dp"
            android:layout_marginBottom="@dimen/size_2dp"
            android:layout_marginLeft="@dimen/size_20dp"
            android:layout_marginRight="@dimen/size_20dp"
            android:background="@color/colorWhite_02"
            android:orientation="horizontal"></LinearLayout>
    </LinearLayout>

</LinearLayout>
