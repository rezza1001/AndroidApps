<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_150dp"
    android:background="@drawable/baxkground_blue_lr_01"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/size_15dp"
    android:paddingLeft="@dimen/size_15dp"
    android:paddingRight="@dimen/size_15dp"
    android:paddingTop="@dimen/size_15dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/size_90dp"
        android:layout_height="@dimen/size_90dp"
        android:paddingTop="@dimen/size_15dp"
        app:srcCompat="@drawable/ic_icons_user" />

    <TextView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/size_15dp"
        android:textSize="@dimen/size_14sp"
        android:text="Welcome"
        android:textColor="@color/colorWhite_02_t50"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:paddingTop="@dimen/size_10dp"
        android:id="@+id/txvw_name_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size_14sp"
        android:textStyle="bold"
        android:textColor="@color/colorWhite_01"
        android:text="Rezza Gumilang" />

</LinearLayout>
