<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="g.rezza.moch.clientdashboard.HomeActivity"
    tools:showIn="@layout/app_bar_home">

    <RelativeLayout
        android:id="@+id/rvly_main_00"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rvly_view_detail_00">
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/background_blue_grey"
        android:layout_height="@dimen/size_5dp"
        android:layout_above="@+id/rvly_view_detail_00"
        android:layout_alignParentStart="true">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rvly_view_detail_00"
        android:background="@color/colorBlue_02"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_35dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite_00"
            android:textSize="@dimen/size_12sp"
            android:text="View Detail Event Report" />
    </RelativeLayout>

</RelativeLayout>
