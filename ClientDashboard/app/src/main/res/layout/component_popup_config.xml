<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/baxkground_white_rd_00"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginBottom="@dimen/size_10dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:gravity="center"
            android:background="@color/colorBlue_02"
            android:textSize="@dimen/size_12sp"
            android:textColor="@color/colorWhite_02"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_55dp"
            android:text="IP Configuration" />


        <LinearLayout
            android:layout_marginLeft="@dimen/size_10dp"
            android:layout_marginRight="@dimen/size_10dp"
            android:layout_marginBottom="@dimen/size_5dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edtx_ipaddress_02"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_40dp"
                android:background="@drawable/baxkground_gray_00"
                android:inputType="date"
                android:hint="IP Address"
                android:layout_weight="1"
                android:padding="@dimen/size_5dp"
                android:layout_marginTop="@dimen/size_10dp"
                android:textColor="@color/colorBlueBlack_02"
                android:textSize="@dimen/size_12sp" />

            <EditText
                android:id="@+id/edtx_port_02"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/size_10dp"
                android:layout_height="@dimen/size_40dp"
                android:background="@drawable/baxkground_gray_00"
                android:inputType="date"
                android:hint="Port"
                android:layout_weight="1"
                android:padding="@dimen/size_5dp"
                android:textColor="@color/colorBlueBlack_02"
                android:textSize="@dimen/size_12sp" />
        </LinearLayout>

        <Button
            android:id="@+id/bbtn_ok_01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10dp"
            android:layout_marginLeft="@dimen/size_10dp"
            android:layout_marginRight="@dimen/size_10dp"
            android:textSize="@dimen/size_14sp"
            android:textColor="@color/colorWhite_02"
            android:background="@drawable/button_blue_3"
            android:text="OK" />
    </LinearLayout>
</RelativeLayout>
