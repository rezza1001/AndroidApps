            android:name=".activity.HomeActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".activity.EditCustomerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.ChangePasswordActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.BlockUserActivity"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="fe9577d7ed4efd245be5c33060815e4a4dea19c2" />

        <activity android:name=".activity.FilterActivity" android:screenOrientation="portrait"/>
        <activity
            android:name=".activity.PaymentActivity"
            android:screenOrientation="portrait"
