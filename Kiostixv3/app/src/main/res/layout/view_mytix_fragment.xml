<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context="g.rezza.moch.kiostixv3.activity.SummaryActivity">

    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/rvly_header_00"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rvly_header_01"
            android:layout_marginTop="@dimen/size_10dp"
            android:layout_marginLeft="@dimen/size_10dp"
            android:layout_marginRight="@dimen/size_10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:visibility="gone"
                android:id="@+id/imvw_back_00"
                android:layout_width="@dimen/size_35dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back_black" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/imvw_share_00"
                android:layout_width="@dimen/size_35dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_share" />

            <TextView
                android:gravity="center"
                android:textSize="@dimen/size_16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingRight="@dimen/size_40dp"
                android:paddingLeft="@dimen/size_40dp"
                style="@style/TextView.Black.Montserrat.Bold"
                android:textStyle="bold"
                android:text="@string/my_tix" />

        </RelativeLayout>

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/lnly_payinfo_00"
        android:layout_below="@+id/rvly_header_00"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/size_10dp"
        android:layout_marginBottom="@dimen/size_5dp"
        android:orientation="vertical">

        <android.support.design.widget.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/size_6dp"
            app:tabIndicatorColor="@color/colorPrimaryDark"
            android:theme="@style/TabLayoutTextStyle"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/tab_layout"/>


    </LinearLayout>

    <RelativeLayout
        android:visibility="visible"
        android:id="@+id/rvly_nonactive_00"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <RelativeLayout

            android:background="@drawable/onboarding_3"
            android:padding="@dimen/size_10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imvw_account_01"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_45dp"
                android:layout_marginTop="@dimen/size_30dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_kiostix" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_20sp"
                style="@style/TextView.White.Montserrat.Bold"
                android:layout_below="@+id/imvw_account_01"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/size_10dp"
                android:text="My Account" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rvly_banner_00"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/size_35dp"
            android:paddingLeft="@dimen/size_35dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/txvw_banner_01"
                style="@style/TextView.White.Montserrat.Bold"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/size_22sp"
                android:text="@string/started_now" />
            <TextView
                android:id="@+id/txvw_banner_02"
                android:layout_below="@+id/txvw_banner_01"
                style="@style/TextView.White.Montserrat"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_16sp"
                android:text="@string/started_now_desc" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/lnly_action_00"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/size_20dp"
            android:padding="@dimen/size_10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bbtn_register_00"
                android:background="@drawable/button_transparent"
                android:layout_weight="1"
                android:textSize="@dimen/size_14sp"
                android:layout_width="0dp"
                android:textStyle="bold"
                android:textAllCaps="false"
                style="@style/TextView.White.Montserrat"
                android:layout_marginRight="@dimen/size_5dp"
                android:layout_height="@dimen/size_40dp"
                android:text="@string/register" />

            <Button
                android:id="@+id/bbtn_login_00"
                android:layout_weight="1"
                style="@style/TextView.White.Montserrat"
                android:textSize="@dimen/size_14sp"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/size_5dp"
                android:background="@drawable/button_transparent"
                android:layout_width="0dp"
                android:textAllCaps="false"
                android:layout_height="@dimen/size_40dp"
                android:text="@string/login" />

        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>
