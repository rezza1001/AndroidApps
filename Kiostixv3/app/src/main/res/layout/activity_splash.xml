<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/onboarding_2"
    tools:context="g.rezza.moch.kiostixv3.activity.OnBoardingActivity">


    <LinearLayout
        android:id="@+id/rvly_banner_00"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/size_35dp"
        android:paddingLeft="@dimen/size_35dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/txvw_banner_01"
            style="@style/TextView.White.Montserrat.Bold"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/size_22sp"
            android:text="KiosTix." />
        <TextView
            android:id="@+id/txvw_banner_02"
            style="@style/TextView.White.Montserrat"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/size_22sp"
            android:text="com" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imvw_logo_00"
        android:layout_marginBottom="@dimen/size_10dp"
        android:layout_width="@dimen/size_120dp"
        android:layout_height="@dimen/size_45dp"
        android:layout_above="@+id/rvly_banner_00"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ic_kiostix" />
</RelativeLayout>
