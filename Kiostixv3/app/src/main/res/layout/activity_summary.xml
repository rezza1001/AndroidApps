<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="g.rezza.moch.kiostixv3.activity.SummaryActivity">

    <ScrollView
        android:id="@+id/scvw_body_00"
        android:animateLayoutChanges="true"
        android:layout_above="@+id/bbtn_action_00"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:padding="@dimen/size_5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/rvly_order_00"
                android:background="@drawable/background_storke_grey"
                android:layout_marginTop="@dimen/size_100dp"
                android:paddingLeft="@dimen/size_10dp"
                android:paddingRight="@dimen/size_10dp"
                android:paddingBottom="@dimen/size_10dp"
                android:paddingTop="@dimen/size_10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txvw_title_00"
                    style="@style/TextView.Black.Montserrat.Bold"
                    android:textSize="@dimen/size_20dp"
                    android:gravity="center"
                    android:text="SUKKE, SOLO EXHIBITION DOUGLAZ DIAZ"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_marginTop="@dimen/size_10dp"
                    android:layout_below="@id/txvw_title_00"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/TextView.Black.Montserrat"
                        android:layout_marginTop="@dimen/size_10dp"
                        android:textSize="@dimen/size_14sp"
                        android:gravity="left"
                        android:text="@string/date_and_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/txvw_datetime_00"
                        style="@style/TextView.Black.Montserrat.Bold"
                        android:textSize="@dimen/size_14sp"
                        android:gravity="left"
                        android:text="Wednesday, 24 May 2017 14:00 WIB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginTop="@dimen/size_10dp"
                        style="@style/TextView.Black.Montserrat"
                        android:textSize="@dimen/size_14sp"
                        android:gravity="left"
                        android:text="@string/location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txvw_location_00"
                        style="@style/TextView.Black.Montserrat.Bold"
                        android:textSize="@dimen/size_14sp"
                        android:gravity="left"
                        android:text="ART:1 New Museum, Gn. Sahari, Jakarta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <g.rezza.moch.kiostixv3.component.DetailOrderView
                        android:id="@+id/dovw_detail_00"
                        android:layout_marginTop="@dimen/size_10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rvly_visitor_00"
                android:background="@drawable/background_storke_grey"
                android:layout_marginTop="@dimen/size_10dp"
                android:paddingLeft="@dimen/size_10dp"
                android:paddingRight="@dimen/size_10dp"
                android:paddingBottom="@dimen/size_10dp"
                android:paddingTop="@dimen/size_20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txvw_title_03"
                    style="@style/TextView.Black.Montserrat.Bold"
                    android:textSize="@dimen/size_18sp"
                    android:gravity="left"
                    android:text="@string/customer_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_marginTop="@dimen/size_10dp"
                    android:layout_below="@id/txvw_title_03"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/TextView.Black.Montserrat"
                        android:textSize="@dimen/size_14sp"
                        android:gravity="left"
                        android:text="@string/full_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/txvw_name_00"
                        style="@style/TextView.Black.Montserrat.Bold"
                        android:textSize="@dimen/size_14sp"
                        android:gravity="left"
                        android:text="Visitor Name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginTop="@dimen/size_10dp"
                        style="@style/TextView.Black.Montserrat"
                        android:textSize="@dimen/size_14sp"
                        android:gravity="left"
                        android:text="@string/email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/txvw_email_00"
                        style="@style/TextView.Black.Montserrat.Bold"
                        android:textSize="@dimen/size_14sp"
                        android:gravity="left"
                        android:text="visitor@gmail.com"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginTop="@dimen/size_10dp"
                        style="@style/TextView.Black.Montserrat"
                        android:textSize="@dimen/size_14sp"
                        android:gravity="left"
                        android:text="@string/phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/txvw_phone_00"
                        style="@style/TextView.Black.Montserrat.Bold"
                        android:textSize="@dimen/size_14sp"
                        android:gravity="left"
                        android:text="0878xxxxxx"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rvly_payment_00"
                android:background="@drawable/background_storke_grey"
                android:layout_marginTop="@dimen/size_10dp"
                android:paddingLeft="@dimen/size_10dp"
                android:paddingRight="@dimen/size_10dp"
                android:paddingBottom="@dimen/size_10dp"
                android:paddingTop="@dimen/size_20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txvw_title_02"
                    style="@style/TextView.Black.Montserrat.Bold"
                    android:textSize="@dimen/size_18sp"
                    android:gravity="left"
                    android:text="@string/payment_method"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <g.rezza.moch.kiostixv3.component.paymentMethod
                    android:layout_below="@+id/txvw_title_02"
                    android:id="@+id/payment_00"
                    android:layout_marginTop="@dimen/size_30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/rvly_header_00"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rvly_header_01"
            android:layout_marginTop="@dimen/size_10dp"
            android:layout_marginLeft="@dimen/size_10dp"
            android:layout_marginRight="@dimen/size_10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imvw_back_00"
                android:layout_width="@dimen/size_35dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back_black" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/imvw_share_00"
                android:layout_width="@dimen/size_35dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_share" />

            <TextView
                android:gravity="center"
                android:textSize="@dimen/size_16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingRight="@dimen/size_40dp"
                android:paddingLeft="@dimen/size_40dp"
                style="@style/TextView.Black.Montserrat.Bold"
                android:textStyle="bold"
                android:text="@string/order_summary" />

        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:background="@color/red"
            android:gravity="center"
            android:layout_marginTop="@dimen/size_5dp"
            android:layout_below="@+id/rvly_header_01"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_28dp">

            <TextView
                android:textSize="@dimen/size_16sp"
                style="@style/TextView.White.Montserrat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/size_10dp"
                android:text="Time Left" />
            <TextView
                android:textSize="@dimen/size_12sp"
                style="@style/TextView.White.Montserrat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/size_10dp"
                android:text=" : " />
            <TextView
                android:id="@+id/txvw_time_00"
                android:textSize="@dimen/size_16sp"
                style="@style/TextView.White.Montserrat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11 min 59 sec " />

        </LinearLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/bbtn_action_00"
        android:layout_margin="@dimen/size_10dp"
        android:text="@string/pay_now"
        android:textAllCaps="false"
        android:textSize="@dimen/size_20sp"
        android:layout_alignParentBottom="true"
        style="@style/TextView.White.Montserrat.Bold"
        android:background="@drawable/button_orange"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_45dp" />

    <RelativeLayout
        android:id="@+id/rvly_expired_00"
        android:visibility="gone"
        android:background="@color/colorPrimary_50"
        android:layout_width="match_parent"
        android:padding="@dimen/size_10dp"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_centerInParent="true"
            android:background="@drawable/background_round_white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_170dp">

            <TextView
                android:id="@+id/txvw_sorry_00"
                style="@style/TextView.Black.Montserrat.Glow"
                android:textSize="@dimen/size_20dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_marginTop="@dimen/size_10dp"
                android:layout_marginBottom="@dimen/size_10dp"
                android:text="@string/sorry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txvw_sorrydesc_00"
                android:layout_below="@+id/txvw_sorry_00"
                style="@style/TextView.Black.Montserrat"
                android:textSize="@dimen/size_16dp"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="@dimen/size_10dp"
                android:layout_marginLeft="@dimen/size_10dp"
                android:gravity="center"
                android:text="@string/sorry_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/bbtn_close_00"
                android:text="@string/re_order"
                android:textAllCaps="false"
                android:textSize="@dimen/size_20sp"
                android:layout_alignParentBottom="true"
                style="@style/TextView.White.Montserrat.Bold"
                android:background="@drawable/button_blue_round_bottom"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_45dp" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
