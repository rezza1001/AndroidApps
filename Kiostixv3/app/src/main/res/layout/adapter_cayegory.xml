<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rvly_body_11"
        android:background="@drawable/background_storke_grey"
        android:layout_marginBottom="@dimen/size_10dp"
        android:padding="@dimen/size_5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txvw_title_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            style="@style/TextView.Black.Montserrat.Bold"
            android:textSize="@dimen/size_16sp"
            android:layout_marginBottom="@dimen/size_5dp"
            android:textColor="@color/colorPrimaryDark"
            android:text="Title 1" />

        <LinearLayout
            android:id="@+id/rvly_title_10"
            android:layout_below="@+id/txvw_title_10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txvw_venue_00"
                android:layout_weight="6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                style="@style/TextView.Black.Montserrat"
                android:textSize="@dimen/size_14sp"
                android:text="Title 1" />

            <TextView
                android:id="@+id/txvw_price_00"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                style="@style/TextView.Black.Montserrat"
                android:textSize="@dimen/size_16sp"
                android:textColor="@color/colorPrimaryDark"
                android:text="Rp. 130.000" />

        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/rvly_title_10"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/size_10dp"
            android:layout_marginBottom="@dimen/size_10dp"
            android:weightSum="10"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txvw_date_10"
                android:layout_below="@+id/rvly_title_10"
                android:layout_weight="7.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/TextView.Black.Montserrat"
                android:textSize="@dimen/size_12sp"
                android:text="Senin, 10 September 2017" />

            <TextView
                android:id="@+id/txvw_select_00"
                android:text="@string/choose"
                style="@style/TextView.White.Montserrat"
                android:background="@drawable/button_orange"
                android:layout_weight="2.5"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="@dimen/size_30dp" />

        </LinearLayout>

    </RelativeLayout>



</RelativeLayout>
