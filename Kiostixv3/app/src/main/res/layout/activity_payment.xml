<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimary_50"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/size_10dp"
    tools:context=".activity.PaymentActivity">

    <RelativeLayout
        android:background="@drawable/background_round_white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rvly_header_00"
            android:layout_alignParentTop="true"
            android:background="@drawable/background_round_top_primary"
            android:layout_width="match_parent"
            android:padding="@dimen/size_10dp"
            android:gravity="center_vertical"
            android:layout_height="@dimen/size_60dp">

            <ImageView
                android:id="@+id/imvw_back_00"
                android:layout_width="@dimen/size_30dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_arrow_back_white" />

            <TextView
                android:id="@+id/txvw_name_00"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:padding="@dimen/size_10dp"
                android:gravity="center_vertical"
                android:textSize="@dimen/size_16sp"
                style="@style/TextView.Grey.Montserrat.Bold"
                android:textColor="@color/white"
                android:layout_toEndOf="@+id/imvw_back_00"
                android:text="Credit Card" />

        </RelativeLayout>

        <ScrollView
            android:layout_below="@+id/rvly_header_00"
            android:layout_above="@+id/bbtn_action_00"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:id="@+id/rvly_body_00"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:padding="@dimen/size_5dp"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:background="@drawable/background_storke_grey"
                        android:paddingLeft="@dimen/size_10dp"
                        android:paddingRight="@dimen/size_10dp"
                        android:paddingBottom="@dimen/size_10dp"
                        android:paddingTop="@dimen/size_10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txvw_vocher_00"
                            android:text="@string/voucher_code_opt"
                            style="@style/TextView.Black.Montserrat"
                            android:textSize="@dimen/size_14sp"
                            android:layout_marginBottom="@dimen/size_5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:layout_below="@+id/txvw_vocher_00"
                            android:orientation="horizontal"
                            android:weightSum="10"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_40dp">

                            <EditText
                                android:id="@+id/edtx_vocher_00"
                                style="@style/TextView.Black.Montserrat"
                                android:layout_weight="7"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/editext_vocher"
                                android:imeActionLabel="Text"
                                android:inputType="text"
                                android:hint="@string/voucher"
                                android:maxLines="1"
                                android:padding="@dimen/size_5dp"
                                android:singleLine="true"
                                android:textSize="@dimen/size_18sp" />

                            <Button
                                android:id="@+id/bbtn_use_00"
                                android:layout_marginTop="1dp"
                                android:layout_marginBottom="1dp"
                                android:layout_weight="3"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/button_grey_line"
                                android:text="@string/use" />

                        </LinearLayout>


                    </RelativeLayout>

                    <RelativeLayout
                        android:background="@drawable/background_storke_grey"
                        android:paddingLeft="@dimen/size_10dp"
                        android:paddingRight="@dimen/size_10dp"
                        android:paddingBottom="@dimen/size_10dp"
                        android:paddingTop="@dimen/size_10dp"
                        android:layout_marginTop="@dimen/size_15dp"
                        android:layout_marginBottom="@dimen/size_15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <g.rezza.moch.kiostixv3.component.DetailOrderView
                            android:id="@+id/dovw_detail_00"
                            android:layout_marginTop="@dimen/size_10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:background="@drawable/background_storke_grey"
                        android:padding="@dimen/size_2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <FrameLayout
                            android:id="@+id/container"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            />
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>




        <Button
            android:id="@+id/bbtn_action_00"
            style="@style/TextView.White.Montserrat"
            android:textSize="@dimen/size_16sp"
            android:textStyle="bold"
            android:layout_margin="@dimen/size_5dp"
            android:background="@drawable/button_orange_active"
            android:textAllCaps="false"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_45dp"
            android:text="@string/pay_now" />

    </RelativeLayout>


</RelativeLayout>