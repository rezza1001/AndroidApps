<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/lnly_content_00"
        android:layout_marginRight="@dimen/size_10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imvw_image_00"
            android:layout_width="@dimen/size_240dp"
            android:layout_height="@dimen/size_180dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/no_image" />

        <TextView
            android:id="@+id/txvw_title_00"
            style="@style/TextView.Black.Montserrat.Bold"
            android:textSize="@dimen/size_14sp"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />
        <TextView
            android:id="@+id/txvw_venue_00"
            style="@style/TextView.Black.Montserrat"
            android:textSize="@dimen/size_12sp"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />
    </LinearLayout>
</LinearLayout>
