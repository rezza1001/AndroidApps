<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rvly_sparator_01"
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_60dp"
        android:weightSum="10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txvw_title_00"
            style="@style/TextView.Black.Montserrat"
            android:textSize="@dimen/size_16sp"
            android:gravity="center_vertical"
            android:text="Kartu Kredit"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/imvw_icon_00"
            android:layout_width="0dp"
            android:scaleType="fitEnd"
            android:layout_height="@dimen/size_30dp"
            android:layout_weight="4"
            app:srcCompat="@drawable/bni" />

        <ImageView
            android:id="@+id/imvw_status_00"
            android:layout_width="0dp"
            android:scaleType="fitEnd"
            android:layout_height="@dimen/size_25dp"
            android:layout_weight="1"
            app:srcCompat="@mipmap/ic_next_grey" />

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rvly_sparator_00"
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>
