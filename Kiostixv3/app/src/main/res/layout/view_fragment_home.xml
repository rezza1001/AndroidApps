<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:design="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context="g.rezza.moch.kiostixv3.activity.HomeActivity">


    <RelativeLayout
        android:id="@+id/header_00"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/size_5dp"
        android:paddingRight="@dimen/size_5dp"
        android:padding="@dimen/size_10dp"
        android:paddingBottom="@dimen/size_10dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/imvw_logo_00"
            android:scaleType="fitXY"
            android:layout_width="@dimen/size_110dp"
            android:layout_height="@dimen/size_40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/ic_kiostix" />

        <RelativeLayout
            android:id="@+id/rvly_search_00"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_40dp"
            android:layout_marginLeft="@dimen/size_10dp"
            android:layout_alignTop="@+id/imvw_logo_00"
            android:layout_toEndOf="@+id/imvw_logo_00"
            android:layout_toRightOf="@+id/imvw_logo_00"
            android:background="@color/white">

            <TextView
                android:id="@+id/edtx_search_00"
                style="@style/TextView.Black.Montserrat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/size_5dp"
                android:gravity="center_vertical"
                android:layout_toLeftOf="@+id/imvw_search_00"
                android:layout_toStartOf="@+id/imvw_search_00"
                android:backgroundTint="@android:color/transparent"
                android:hint="@string/search_here"
                android:textSize="@dimen/size_16sp" />

            <ImageView
                android:id="@+id/imvw_search_00"
                android:layout_width="@dimen/size_30dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/size_5dp"
                design:srcCompat="@mipmap/ic_search" />
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rvly_menu_00"
        android:layout_below="@+id/header_00"
        android:background="@color/white"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50dp">

        <com.astuetz.PagerSlidingTabStrip
            android:id="@+id/tabs"
            app:pstsTabTextAllCaps="false"
            style="@style/TextView.Black.Montserrat"
            app:pstsTabTextColor="@color/colorPrimaryDark"
            app:pstsTabTextSize="@dimen/size_16sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/rvly_menu_00"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <g.rezza.moch.kiostixv3.lib.MyViewPagerHome
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity" />

    </RelativeLayout>


</RelativeLayout>
