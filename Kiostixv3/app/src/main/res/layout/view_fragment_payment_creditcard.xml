<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:padding="@dimen/size_10dp"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_below="@+id/imvw_logo_00"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_marginBottom="@dimen/size_10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <g.rezza.moch.kiostixv3.component.EditextStandardBlack
                android:id="@+id/edtx_nocard_00"
                android:layout_weight="8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <g.rezza.moch.kiostixv3.component.EditextStandardBlack
                android:id="@+id/edtx_cvv_00"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <g.rezza.moch.kiostixv3.component.EditextStandardBlack
            android:id="@+id/edtx_name_00"
            android:layout_marginBottom="@dimen/size_10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="@string/expiry_date"
            android:layout_marginLeft="@dimen/size_5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_marginBottom="@dimen/size_20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <EditText
                android:id="@+id/edtx_month_00"
                style="@style/TextView.Black.Montserrat"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="MM"
                android:gravity="left"
                android:imeActionLabel="Text"
                android:imeOptions="actionUnspecified"
                android:inputType="phone"
                android:maxLines="1"
                android:maxLength="2"
                android:textSize="@dimen/size_18sp"
                android:singleLine="true" />

            <EditText
                android:id="@+id/edtx_year_00"
                style="@style/TextView.Black.Montserrat"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="YYYY"
                android:gravity="left"
                android:imeActionLabel="Text"
                android:imeOptions="actionUnspecified"
                android:inputType="phone"
                android:maxLines="1"
                android:maxLength="4"
                android:textSize="@dimen/size_18sp"
                android:singleLine="true" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
