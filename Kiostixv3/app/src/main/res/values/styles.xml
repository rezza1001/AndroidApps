<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AppTheme.notitle" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppCompat.Light.NoActionBar.FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="TabLayoutTextStyle" >
        <item name="android:textSize">@dimen/size_14sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Theme.Dialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="TextView.Black.Montserrat" parent="Base.TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>

    <style name="TextView.Black.Montserrat.Bold" parent="Base.TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>

    <style name="TextView.Orange.Montserrat.Bold" parent="Base.TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/holo_orange_dark</item>
        <item name="android:textColorHint">@android:color/holo_orange_light</item>
    </style>

    <style name="TextView.Orange.Montserrat" parent="Base.TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/holo_orange_dark</item>
        <item name="android:textColorHint">@android:color/holo_orange_light</item>
    </style>

    <style name="TextView.White.Montserrat.Glow" parent="Base.TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#010d3f</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>

    <style name="TextView.Black.Montserrat.Glow" parent="Base.TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/dinpro_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#010d3f</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>

    <style name="TextView.White.Montserrat" parent="Base.TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>

    <style name="TextView.White.Montserrat.Transparent" parent="Base.TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white_80</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>

    <style name="TextView.White.Montserrat.Bold" parent="Base.TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@color/white_80</item>
    </style>

    <style name="EditTextHint.White" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textColorHint">@color/white_80</item>
        <item name="colorControlNormal">@color/white_80</item>
        <item name="colorControlActivated">@color/white_50</item>
        <item name="colorControlHighlight">@color/white_50</item>
        <item name="android:divider">@color/white</item>
    </style>

    <style name="EditTextHint.Black" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@android:color/black</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:divider">@color/grey</item>
    </style>

    <style name="TextView.Red.Montserrat.Bold" parent="Base.TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>

    <style name="TextView.Grey.Montserrat.Bold" parent="Base.TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/dinpro_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>

    <style name="TextView.Grey.Montserrat" parent="Base.TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/dinpro_bold</item>
        <item name="android:textColor">#ddd</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>

    <style name="TextView.Red.Montserrat" parent="Base.TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#b70000</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>


    <style name="MySimpleSpiner" parent="@android:style/Widget.Spinner">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>


</resources>
