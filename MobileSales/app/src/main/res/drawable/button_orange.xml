<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners  android:radius ="0dp"/>
            <stroke android:width="0dip"
                android:color="@color/color_orange_light" />
            <gradient android:angle="-90"
                android:startColor="@color/color_orange_light"
                android:endColor="@color/color_orange_light"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius ="@dimen/size_5dp"/>
            <stroke android:width="0dip" android:color="@color/color_orange_light" />
            <solid android:color="@color/color_orange_light"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius ="@dimen/size_5dp"  />
            <stroke android:width="0dp"
                android:color="@color/color_orange_dark" />
            <gradient
                android:angle="-90"
                android:startColor="@color/color_orange_dark"
                android:endColor="@color/color_orange_dark" />
        </shape>
    </item>
</selector>