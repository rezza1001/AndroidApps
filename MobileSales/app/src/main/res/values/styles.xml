<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.AppCompat.Light.NoActionBar.FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="AppTheme.notitle" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="EditText.Login" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>

    <style name="TextView.Black.Montserrat.Bold" parent="Base.TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>
    <style name="TextView.Grey.Montserrat.Bold" parent="Base.TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_text_grey</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>
    <style name="TextView.Black.Montserrat" parent="Base.TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>

    <style name="TextView.White.Montserrat" parent="Base.TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>

    <style name="TextView.Grey.Montserrat" parent="Base.TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>

    <style name="TextView.Orange.Montserrat.Bold" parent="Base.TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/holo_orange_dark</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>

    <style name="TextView.Red.Montserrat.Bold" parent="Base.TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>

    <style name="TextView.Red.Montserrat" parent="Base.TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
    </style>

    <style name="TextView.Blue.Montserrat" parent="Base.TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/color_blue_light</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
