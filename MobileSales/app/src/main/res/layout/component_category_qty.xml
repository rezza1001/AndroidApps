<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginBottom="@dimen/size_10dp"
        android:weightSum="3"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txvw_category_30"
                style="@style/TextView.Black.Montserrat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Premium Premium Premium Premium Premium Premium Premium"
                android:textSize="@dimen/size_12sp" />

            <TextView
                android:id="@+id/txvw_price_31"
                android:layout_below="@+id/txvw_category_30"
                style="@style/TextView.Black.Montserrat.Bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="IDR 400,000"
                android:textSize="@dimen/size_12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/bbtn_minus_40"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    style="@style/TextView.Black.Montserrat"
                    android:textSize="@dimen/size_22sp"
                    android:gravity="center"
                    android:background="@drawable/button_white_line"
                    android:text="-" />

                <TextView
                    android:id="@+id/txvw_qty_32"
                    android:layout_below="@+id/txvw_category_30"
                    android:background="@drawable/background_white_00"
                    style="@style/TextView.Black.Montserrat"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:textSize="@dimen/size_14sp" />

                <TextView
                    android:id="@+id/bbtn_plus_41"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:background="@drawable/button_white_line"
                    android:layout_weight="1"
                    style="@style/TextView.Black.Montserrat"
                    android:textSize="@dimen/size_22sp"
                    android:text="+" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>



</RelativeLayout>
