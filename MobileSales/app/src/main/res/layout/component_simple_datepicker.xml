<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txvw_mandatory_00"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/size_18sp"
        android:layout_marginRight="@dimen/size_5dp"
        style="@style/TextView.Red.Montserrat.Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*" />


    <LinearLayout
        android:id="@+id/lnly"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/txvw_title_00"
            android:layout_marginLeft="@dimen/size_5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_12sp"
            style="@style/TextView.Grey.Montserrat"
            android:text="Title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="8"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edtx_dd_00"
                style="@style/EditText.Login"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="DD"
                android:imeActionLabel="Text"
                android:imeOptions="actionUnspecified"
                android:inputType="number"
                android:maxLines="1"
                android:maxLength="2"
                android:textSize="@dimen/size_14sp"
                android:singleLine="true" />

            <EditText
                android:id="@+id/edtx_mm_00"
                style="@style/EditText.Login"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="MM"
                android:imeActionLabel="Text"
                android:imeOptions="actionUnspecified"
                android:inputType="number"
                android:maxLines="1"
                android:maxLength="2"
                android:textSize="@dimen/size_14sp"
                android:singleLine="true" />

            <EditText
                android:id="@+id/edtx_yy_00"
                style="@style/EditText.Login"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="YYYY"
                android:imeActionLabel="Text"
                android:imeOptions="actionUnspecified"
                android:inputType="number"
                android:maxLines="1"
                android:maxLength="4"
                android:textSize="@dimen/size_14sp"
                android:singleLine="true" />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
