<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txvw_title_00"
            android:gravity="center"
            style="@style/TextView.Black.Montserrat.Bold"
            android:textSize="@dimen/size_16sp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_45dp"
            android:text="Title" />

        <RelativeLayout
            android:background="@color/colorgrey_01"
            android:padding="@dimen/size_10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txvw_adult_00"
                android:gravity="center"
                style="@style/TextView.Black.Montserrat.Bold"
                android:textSize="@dimen/size_14sp"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adult" />

            <TextView
                android:id="@+id/txvw_adult_01"
                style="@style/TextView.Black.Montserrat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/txvw_adult_00"
                android:gravity="center"
                android:text=" ( Ages 13-99 ) "
                android:textSize="@dimen/size_14sp" />

            <g.rezza.moch.mobilesales.component.MyChooserQty
                android:id="@+id/cqty_adult_00"
                android:layout_below="@+id/txvw_adult_00"
                android:layout_marginTop="@dimen/size_5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </RelativeLayout>


        <RelativeLayout
            android:background="@color/colorgrey_01"
            android:padding="@dimen/size_10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txvw_child_00"
                android:gravity="center"
                style="@style/TextView.Black.Montserrat.Bold"
                android:textSize="@dimen/size_14sp"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Child" />

            <TextView
                android:id="@+id/txvw_child_01"
                style="@style/TextView.Black.Montserrat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/txvw_child_00"
                android:gravity="center"
                android:text=" ( Ages 04-12 ) "
                android:textSize="@dimen/size_14sp" />

            <g.rezza.moch.mobilesales.component.MyChooserQty
                android:id="@+id/cqty_child_00"
                android:layout_below="@+id/txvw_child_00"
                android:layout_marginTop="@dimen/size_5dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_45dp"/>

        </RelativeLayout>


        <Button
            android:id="@+id/bbtn_action_00"
            android:background="@drawable/button_login"
            style="@style/TextView.White.Montserrat"
            android:textSize="@dimen/size_14sp"
            android:text="OK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
