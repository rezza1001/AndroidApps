<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/imvw_sync_00"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="@dimen/size_90dp"
        android:layout_width="@dimen/size_30dp"
        android:layout_height="@dimen/size_30dp"
        app:srcCompat="@drawable/ic_syncronize" />

    <ProgressBar
        android:id="@+id/prgb_00"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="@dimen/size_90dp"
        android:layout_width="@dimen/size_30dp"
        android:layout_height="@dimen/size_30dp"
        android:indeterminate="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="10"
        android:padding="@dimen/size_3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@drawable/button_menus"
            android:layout_weight="8"
            android:layout_width="0dp"
            android:padding="@dimen/size_5dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txvw_balance_00"
                style="@style/TextView.Black.Montserrat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_12sp"
                android:layout_weight="1"
                android:text="@string/balance" />

            <TextView
                android:id="@+id/txvw_balance_01"
                style="@style/TextView.Black.Montserrat.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_16sp"
                android:layout_weight="1"
                android:text="Rp. 0" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rvly_topup_00"
            android:background="@drawable/button_menus"
            android:layout_weight="2"
            android:padding="@dimen/size_3dp"
            android:layout_marginLeft="@dimen/size_5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_centerHorizontal="true"
                android:layout_width="@dimen/size_30dp"
                android:layout_height="@dimen/size_30dp"
                app:srcCompat="@mipmap/ic_topup" />

            <TextView
                style="@style/TextView.Black.Montserrat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView"
                android:layout_centerHorizontal="true"
                android:text="@string/top_up"
                android:textSize="@dimen/size_12sp" />
        </RelativeLayout>

    </LinearLayout>



</RelativeLayout>
