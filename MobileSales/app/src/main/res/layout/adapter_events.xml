<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imvw_icon_00"
        android:layout_width="@dimen/size_150dp"
        android:layout_height="@dimen/size_100dp"
        app:srcCompat="@drawable/events_02" />

    <LinearLayout
        android:layout_marginLeft="@dimen/size_5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txvw_name_00"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_13sp"
            android:ellipsize="end"
            android:maxLines="2"
            style="@style/TextView.Black.Montserrat.Bold"
            android:text="ALINA BARAZ PEKING DUK THE PAPER KITES" />

        <TextView
            android:id="@+id/txvw_date_00"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_12sp"
            style="@style/TextView.Black.Montserrat"
            android:text="23-24 Dec 2017" />

        <LinearLayout
            android:id="@+id/rvly_ratting_00"
            android:layout_marginTop="@dimen/size_5dp"
            android:layout_marginRight="@dimen/size_5dp"
            android:layout_marginBottom="@dimen/size_10dp"
            android:layout_width="match_parent"
            android:gravity="bottom"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imvw_ratting_00"
                android:layout_width="@dimen/size_15dp"
                android:layout_height="@dimen/size_16dp"
                app:srcCompat="@drawable/ic_ratting" />

            <TextView
                android:id="@+id/txvw_rating_00"
                android:layout_marginLeft="@dimen/size_5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_12sp"
                style="@style/TextView.Black.Montserrat.Bold"
                android:text="4.5" />

            <TextView
                android:id="@+id/txvw_reviews"
                style="@style/TextView.Blue.Montserrat"
                android:textSize="@dimen/size_12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_weight="1"
                android:text="20 reviews" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
