<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rvly_root_00"
        android:padding="@dimen/size_5dp"
        android:background="@color/colorWhite_00"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_50dp">

        <TextView
            android:id="@+id/txvw_title_00"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/imvw_status_00"
            style="@style/TextView.Black.Montserrat.Bold"
            android:textSize="@dimen/size_14sp"
            android:text="TextView" />

        <ImageView
            android:id="@+id/imvw_status_00"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_width="@dimen/size_30dp"
            android:layout_height="@dimen/size_30dp" />

    </RelativeLayout>


</RelativeLayout>
