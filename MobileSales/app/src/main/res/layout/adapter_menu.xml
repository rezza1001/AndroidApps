<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/lnly_root_menu_00"
        android:background="@color/colorgrey_01_t33"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_140dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:layout_marginTop="@dimen/size_5dp"
            android:id="@+id/imvw_menu"
            android:layout_gravity="center"
            android:layout_width="@dimen/size_80dp"
            android:layout_height="@dimen/size_80dp"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/txvw_menu"
            android:layout_marginTop="@dimen/size_5dp"
            style="@style/TextView.Grey.Montserrat"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/size_12sp"
            android:text="Title Menu" />
    </LinearLayout>


</LinearLayout>
