<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txvw_mandatory_00"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/size_18sp"
        android:layout_marginRight="@dimen/size_5dp"
        style="@style/TextView.Red.Montserrat.Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*" />
    <TextView
        android:id="@+id/txvw_message_00"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/size_12sp"
        android:layout_marginRight="@dimen/size_20dp"
        style="@style/TextView.Red.Montserrat"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Message here" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/txip_00"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edtx_00"
            style="@style/EditText.Login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=""
            android:imeActionLabel="Text"
            android:imeOptions="actionUnspecified"
            android:inputType="text"
            android:maxLines="1"
            android:textSize="@dimen/size_14sp"
            android:singleLine="true" />

    </android.support.design.widget.TextInputLayout>

</RelativeLayout>
