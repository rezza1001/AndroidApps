<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/size_20dp"
    android:paddingTop="@dimen/size_20dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:padding="@dimen/size_5dp"
            android:layout_width="@dimen/size_50dp"
            android:layout_height="@dimen/size_50dp"
            app:srcCompat="@drawable/ic_invoice" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/size_10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txvw_orderid_00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/size_18sp"
                android:textColor="@color/text_orange"
                android:textStyle="bold"
                android:text="12537XXXXX" />


            <TextView
                android:id="@+id/txvw_date_00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/size_14sp"
                android:text="12537XXXXX" />
            <TextView
                android:id="@+id/txvw_payment_00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/size_14sp"
                android:text="12537XXXXX" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
