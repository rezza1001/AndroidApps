<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:bottomRightRadius ="@dimen/size_5dp" android:topRightRadius="@dimen/size_5dp" />
            <stroke android:width="1dip"
                android:color="@color/colorred_01" />
            <gradient android:angle="-90"
                android:startColor="@color/colorred_01_t50"
                android:endColor="@color/colorred_01_t50"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:bottomRightRadius ="@dimen/size_5dp" android:topRightRadius="@dimen/size_5dp" />
            <stroke android:width="1dip" android:color="@color/colorred_01_t50" />
            <solid android:color="@color/colorred_01_t50"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:bottomRightRadius ="@dimen/size_5dp" android:topRightRadius="@dimen/size_5dp" />
            <stroke android:width="1dip"
                android:color="@color/colorred_01_t50" />
            <gradient
                android:angle="-90"
                android:startColor="@color/colorred_01"
                android:endColor="@color/colorred_01" />
        </shape>
    </item>
</selector>