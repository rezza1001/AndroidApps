<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <stroke android:width="0dip"
                android:color="@color/colorBlue_04" />
            <gradient android:angle="-90"
                android:startColor="@color/colorBlue_06"
                android:endColor="@color/colorBlue_06"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <stroke android:width="0dip" android:color="@color/colorBlue_06" />
            <solid android:color="@color/colorBlue_06"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <stroke android:width="0dip"
                android:color="@color/colorBlue_04" />
            <gradient
                android:angle="-90"
                android:startColor="@color/colorBlue_04"
                android:endColor="@color/colorBlue_04" />
        </shape>
    </item>
</selector>