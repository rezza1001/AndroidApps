<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="@dimen/size_10dp"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rvly_print_00"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </RelativeLayout>

    <RelativeLayout
        android:background="@drawable/background_white_shadow"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rvly_header_20"
            android:background="@drawable/background_rounded_top_blue"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_40dp">

            <TextView
                android:id="@+id/textView"
                android:layout_centerInParent="true"
                android:textStyle="bold"
                android:textColor="@color/colorWhite_00"
                android:textSize="@dimen/size_16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Complete" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rvly_body_21"
            android:layout_below="@+id/rvly_header_20"
            android:background="@color/colorWhite_01"
            android:paddingTop="@dimen/size_10dp"
            android:paddingBottom="@dimen/size_10dp"
            android:paddingLeft="@dimen/size_5dp"
            android:paddingRight="@dimen/size_5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <LinearLayout
                android:id="@+id/lnly_value_30"
                android:layout_below="@+id/texvw_selected_31"
                android:background="@drawable/background_editext_grey"
                android:layout_marginTop="@dimen/size_10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <g.rezza.moch.kiospos.component.TextKeyValue
                    android:id="@+id/txkv_orderdtl_40"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <g.rezza.moch.kiospos.component.TextKeyValue
                    android:id="@+id/txkv_price_41"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <g.rezza.moch.kiospos.component.TextKeyValue
                    android:id="@+id/txkv_qty_42"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <g.rezza.moch.kiospos.component.TextKeyValue
                    android:id="@+id/txkv_total_43"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/texvw_info_42"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_10sp"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/size_5dp"
                    android:textColor="@color/colorred_01"
                    android:text="* Subtotal diluar transaction cost (apabila menggunakan debit/credit card)"
                    android:layout_alignParentTop="true" />
                <g.rezza.moch.kiospos.component.TextKeyValue
                    android:id="@+id/txkv_status_44"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/imvw_qrcode_31"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/lnly_value_30"
                android:layout_width="@dimen/size_130dp"
                android:layout_height="@dimen/size_130dp"
                android:scaleType="fitXY"
                android:background="#00000000"
                app:srcCompat="@mipmap/ic_qrcode" />

        </RelativeLayout>



        <RelativeLayout
            android:padding="@dimen/size_5dp"
            android:layout_below="@+id/rvly_body_21"
            android:id="@+id/rvly_footer_22"
            android:background="@drawable/background_white_shadow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bbtn_print_30"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_40dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_weight="1"
                    android:background="@drawable/button_green_round_left"
                    android:text="Print"
                    android:textColor="@color/colorWhite_00"
                    android:textSize="@dimen/size_12sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/bbtn_save_31"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_weight="1"
                    android:text="Save"
                    android:background="@drawable/button_blue06"
                    android:textColor="@color/colorWhite_00"
                    android:textSize="@dimen/size_12sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/bbtn_done_31"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/size_40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_weight="1"
                    android:text="Done"
                    android:background="@drawable/button_red_round_right"
                    android:textColor="@color/colorWhite_00"
                    android:textSize="@dimen/size_12sp"
                    android:textStyle="bold" />


            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/imvw_icon_10"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/size_65dp"
        android:layout_height="@dimen/size_65dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_logo_kiostix" />
</RelativeLayout>
