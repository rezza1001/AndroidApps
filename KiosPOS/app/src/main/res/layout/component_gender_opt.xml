<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".Activitty.MainActivity"
    >

    <TextView
        android:id="@+id/txvw_title_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size_10sp"
        android:textColor="@color/colorBlue_06"
        android:text="Gender" />

    <LinearLayout
        android:id="@+id/lnly"
        android:layout_below="@+id/txvw_title_10"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imvw_icon_30"
                android:layout_marginRight="@dimen/size_5dp"
                android:layout_width="@dimen/size_40dp"
                android:layout_height="@dimen/size_40dp"
                android:scaleType="fitCenter"
                android:padding="@dimen/size_8dp"
                android:background="@drawable/background_editext_grey"
                app:srcCompat="@drawable/ic_check_off" />

            <RadioGroup
                android:id="@+id/rdg_gender_30"
                android:gravity="center_vertical"
                android:background="@drawable/background_editext_grey"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_40dp"
                android:layout_toEndOf="@+id/imvw_icon_30">

                <RadioButton
                    android:id="@+id/rd_male_40"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Male"
                    android:layout_marginRight="@dimen/size_20dp"
                    />

                <RadioButton
                    android:id="@+id/rd_female_41"
                    android:text="Female"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

            </RadioGroup>
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
