<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="@dimen/size_5dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:background="@drawable/background_sahdow_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout2">

        <TextView
            android:id="@+id/txvw_option_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="@dimen/size_12sp"
            android:textColor="@color/colorBlue_06"
            android:layout_marginLeft="@dimen/size_10dp"
            android:text="Guset 1"
            android:layout_toEndOf="@+id/rvly_indicator_22" />

        <RelativeLayout
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_width="@dimen/size_30dp"
            android:layout_height="@dimen/size_40dp"
            android:background="@drawable/background_rounded_left_blue"
            android:id="@+id/rvly_indicator_22"></RelativeLayout>

        <ImageView
            android:id="@+id/imvw_option_21"
            android:layout_width="@dimen/size_20dp"
            android:layout_height="@dimen/size_20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/size_10dp"
            app:srcCompat="@drawable/ic_view" />

    </RelativeLayout>



</RelativeLayout>
