<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitty.PairingActivity">

    <RelativeLayout
        android:paddingTop="@dimen/size_10dp"
        android:paddingBottom="@dimen/size_10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/lsvw_paired_10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bbtn_close_11"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView2"
            android:background="@color/colorWhite_03" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_55dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/background_rounded_top_blue"
            android:gravity="center"
            android:text="Paired devices"
            android:textColor="@color/colorWhite_00"
            android:textSize="@dimen/size_14sp" />

        <Button
            android:id="@+id/bbtn_close_11"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/button_red_bootom_round"
            android:text="Close"
            android:textColor="@color/colorWhite_00"
            android:textSize="@dimen/size_14sp" />
    </RelativeLayout>

</RelativeLayout>
