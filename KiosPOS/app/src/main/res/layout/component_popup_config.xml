<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginBottom="@dimen/size_10dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:gravity="center"
            android:background="@color/colorBlue_02"
            android:textSize="@dimen/size_12sp"
            android:textColor="@color/colorWhite_02"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_55dp"
            android:text="IP Configuration" />


        <LinearLayout
            android:layout_marginLeft="@dimen/size_10dp"
            android:layout_marginRight="@dimen/size_10dp"
            android:layout_marginBottom="@dimen/size_5dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <g.rezza.moch.kiospos.component.MyEditextNumber
                android:id="@+id/myedtx_ipaddress_30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <g.rezza.moch.kiospos.component.MyEditextNumber
                android:id="@+id/myedtx_port_30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <Button
            android:id="@+id/bbtn_ok_01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10dp"
            android:layout_marginLeft="@dimen/size_10dp"
            android:layout_marginRight="@dimen/size_10dp"
            android:textSize="@dimen/size_14sp"
            android:textColor="@color/colorWhite_02"
            android:background="@drawable/button_active_0"
            android:text="OK" />
    </LinearLayout>
</RelativeLayout>
