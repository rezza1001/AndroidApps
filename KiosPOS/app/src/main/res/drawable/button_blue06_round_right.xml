<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners  android:radius ="@dimen/size_2dp"/>
            <stroke android:width="0dip"
                android:color="@color/colorGrey_00" />
            <gradient android:angle="-90"
                android:startColor="@color/colorGrey_00"
                android:endColor="@color/colorGrey_00"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius ="@dimen/size_2dp"/>
            <stroke android:width="0dip" android:color="@color/colorGrey_00" />
            <solid android:color="@color/colorGrey_00"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius ="@dimen/size_2dp"/>
            <stroke android:width="0dip"
                android:color="@color/colorWhite_00" />
            <gradient
                android:angle="-90"
                android:startColor="@color/colorWhite_00"
                android:endColor="@color/colorWhite_00" />
        </shape>
    </item>
</selector>