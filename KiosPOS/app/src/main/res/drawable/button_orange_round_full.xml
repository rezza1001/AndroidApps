<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners  android:radius ="@dimen/size_3dp"/>
            <stroke android:width="0dip"
                android:color="@color/colorRed_00" />
            <gradient android:angle="-90"
                android:startColor="@color/colorOrange_00"
                android:endColor="@color/colorOrange_00"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius ="@dimen/size_3dp"/>
            <stroke android:width="0dip" android:color="@color/colorOrange_00" />
            <solid android:color="@color/colorOrange_00"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius ="@dimen/size_3dp"  />
            <stroke android:width="@dimen/size_1dp"
                android:color="@color/colorOrange_00" />
            <gradient
                android:angle="-90"
                android:startColor="@color/colorOrange_00"
                android:endColor="@color/colorOrange_00" />
        </shape>
    </item>
</selector>