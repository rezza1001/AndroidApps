<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="g.rezza.moch.kiospos">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />


    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_pos_mobile"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_pos_mobile"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.notitle">
        <activity
            android:name=".Activitty.DataCheckActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activitty.MainPosActivity"
            android:label="@string/title_activity_home"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.notitle" />
        <activity android:name=".Activitty.DetailActivity"
            android:screenOrientation="landscape" >
        </activity>

        <activity android:name=".Activitty.GuestInformationActivity">
        </activity>

        <activity
            android:name=".Activitty.PairingActivity"
            android:theme="@style/AppTheme.transparent" />
        <activity
            android:name=".Activitty.PrintActivity"
            android:theme="@style/AppTheme.transparent" />
    </application>

</manifest>