<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rvly_left_00"
        android:background="@drawable/chat_buble_left"
        android:layout_marginRight="@dimen/size_20dp"
        android:layout_alignParentLeft="true"
        android:minHeight="@dimen/size_50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/txvw_l_time_00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13 Juni 2018 23:00:01"
            android:textSize="@dimen/size_12sp"/>

        <TextView
            android:id="@+id/txvw_l_message_00"
            android:layout_below="@+id/txvw_l_time_00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Here message message message ....."
            android:textColor="@color/black"
            android:textSize="@dimen/size_16sp"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rvly_right_00"
        android:paddingLeft="@dimen/size_10dp"
        android:background="@drawable/chat_bubble_right"
        android:visibility="gone"
        android:layout_marginLeft="@dimen/size_20dp"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:minHeight="@dimen/size_50dp"
        android:minWidth="@dimen/size_100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/txvw_r_time_00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13 Juni 2018 23:00:01"
            android:textSize="@dimen/size_12sp"/>

        <TextView
            android:id="@+id/txvw_r_message_00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_below="@+id/txvw_r_time_00"
            android:text="Here message message message"
            android:textColor="@color/black"
            android:textSize="@dimen/size_16sp"/>
    </RelativeLayout>

</RelativeLayout>
