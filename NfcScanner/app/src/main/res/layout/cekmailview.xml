<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="g.rezza.moch.nfcscanner.Main2Activity">

    <LinearLayout
        android:orientation="vertical"
        android:weightSum="10"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_weight="8"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_height="0dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/logoproject"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:scaleType="fitXY"
                android:layout_marginBottom="10dp"
                android:id="@+id/imvw_logo" />

            <TextView
                android:text="Cek Order"
                android:gravity="center"
                android:textSize="15pt"
                android:textColor="@color/colorBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:id="@+id/txvw_header" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imvw_nfc"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_nfc" />

                <ImageView
                    android:id="@+id/imvw_qr"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:src="@drawable/ic_qrscan" />
            </LinearLayout>

            <TextView
                android:layout_marginTop="20dp"
                android:text="Order Code"
                android:gravity="center"
                android:padding="10dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txvw_value_2" />

            <Button
                android:id="@+id/button"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Check" />


        </LinearLayout>



        <RelativeLayout
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="65dp"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/logo_kiostix"
                android:id="@+id/imvw_logo_ksx"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imvw_logo_ksx"
                android:layout_centerHorizontal="true"
                android:textSize="10sp"
                android:text="Created By : Rezza Gumilang" />


        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
