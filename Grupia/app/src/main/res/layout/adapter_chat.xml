<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rvly_left_00"
            android:layout_marginRight="@dimen/size_50dp"
            android:layout_marginBottom="@dimen/size_5dp"
            android:layout_marginTop="@dimen/size_5dp"
            android:background="@drawable/chat_buble_left"
            android:gravity="left"
            android:paddingLeft="@dimen/size_20dp"
            android:paddingTop="@dimen/size_10dp"
            android:paddingBottom="@dimen/size_10dp"
            android:paddingRight="@dimen/size_10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txvw_message_l_00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:textSize="@dimen/size_14sp"
                android:layout_marginRight="@dimen/size_10dp"
                android:textColor="@color/text_black"
                android:layout_alignParentTop="true"
                android:text="Hi, Mochamad Rezza Gumilang " />


        </RelativeLayout>

        <RelativeLayout
            android:visibility="visible"
            android:id="@+id/rvly_rigth_00"
            android:layout_marginLeft="@dimen/size_50dp"
            android:layout_marginBottom="@dimen/size_5dp"
            android:layout_marginTop="@dimen/size_5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/chat_bubble_right"
            android:gravity="right"
            android:paddingBottom="@dimen/size_10dp"
            android:paddingLeft="@dimen/size_10dp"
            android:paddingRight="@dimen/size_10dp"
            android:paddingTop="@dimen/size_10dp">

            <TextView
                android:id="@+id/txvw_message_r_00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/size_5dp"
                android:layout_marginRight="@dimen/size_5dp"
                android:text="Hi, Mochamad Rezza Gumilang"
                android:textColor="@color/text_black"
                android:textSize="@dimen/size_14sp" />


        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
