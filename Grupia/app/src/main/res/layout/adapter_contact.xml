<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="@dimen/size_5dp"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imvw_profile_00"
        android:layout_width="@dimen/size_80dp"
        android:layout_height="@dimen/size_80dp"
        android:layout_centerVertical="true"
        android:src="@drawable/test_profile"
        app:civ_border_color="@color/white"
        app:civ_border_width="1dp" />

    <LinearLayout
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_15dp"
        android:layout_toEndOf="@+id/imvw_profile_00"
        android:layout_toRightOf="@+id/imvw_profile_00"
        android:orientation="vertical">


        <TextView
            android:id="@+id/txvw_name_00"
            android:textSize="@dimen/size_18sp"
            android:textStyle="bold"
            android:fontFamily="@font/open_sans"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sarah Adelia" />

        <TextView
            android:id="@+id/txvw_no_00"
            android:fontFamily="@font/open_sans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_18sp"
            android:text="B011" />
    </LinearLayout>


</RelativeLayout>
